<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.RealEstateApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_background</item>
        <item name="android:textColor">@color/strong</item>
        <item name="android:fontFamily">@font/gothamssm_book</item>
        <item name="buttonBarButtonStyle">@style/AlertDialogButtonStyle</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/strong</item>
        <item name="android:fontFamily">@font/gothamssm_bold</item>
    </style>

    <style name="roundedImageView" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="bottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="colorPrimary">@color/strong</item>
        <item name="colorSurface">@color/white</item>
    </style>

    <style name="textTitle01" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/strong</item>
        <item name="android:fontFamily">@font/gothamssm_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textTitle02" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/strong</item>
        <item name="android:fontFamily">@font/gothamssm_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textTitle03" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/strong</item>
        <item name="android:fontFamily">@font/gothamssm_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textBody" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/medium</item>
        <item name="android:fontFamily">@font/gothamssm_book</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textInput" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/medium</item>
        <item name="android:fontFamily">@font/gothamssm_light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textHint" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/light</item>
        <item name="android:fontFamily">@font/gothamssm_book</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textSubtle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/medium</item>
        <item name="android:fontFamily">@font/gothamssm_book</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="textDetail" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/medium</item>
        <item name="android:fontFamily">@font/gothamssm_book</item>
        <item name="android:textSize">8sp</item>
    </style>
</resources>